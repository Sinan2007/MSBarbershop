@using MSBarbershop.Data.Entities.Enums
<div class="container mt-5">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold">My Reservations</h2>

        <a asp-action="Create" class="btn btn-dark">
            + New Reservation
        </a>
    </div>

    <div class="card shadow border-0">
        <div class="card-body">

            <table class="table table-striped align-middle">
                <thead>
                    <tr>
                        <th>Barber</th>
                        <th>Service</th>
                        <th>Date</th>
                        <th>Time</th>
                        <th>Status</th>
                        <th></th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Barber.Name</td>
                            <td>@item.Service.Name</td>
                            <td>@item.Date</td>
                            <td>@item.Time</td>

                            <td>
                                @if (item.Status == ReservationStatus.Active)
                                {
                                    <span class="badge bg-primary">Active</span>
                                }
                                else if (item.Status == ReservationStatus.Cancelled)
                                {
                                    <span class="badge bg-danger">Cancelled</span>
                                }
                                else
                                {
                                    <span class="badge bg-success">Completed</span>
                                }
                            </td>

                            <td>
                                @if (item.Status == ReservationStatus.Active)
                                {
                                    <form asp-action="Cancel" method="post">
                                        <input type="hidden" name="id" value="@item.Id" />
                                        <button class="btn btn-sm btn-danger">
                                            Cancel
                                        </button>
                                    </form>
                                }
                            </td>
                        </tr>
                    }
                </tbody>

            </table>

        </div>
    </div>

</div>
